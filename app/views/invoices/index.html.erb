<% content_for :title, "Invoices" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Invoices</h1>
  <%= link_to "New invoice", new_invoice_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">Customer Name</th>
      <th scope="col">Customer Email</th>
      <th scope="col">Status</th>
      <th scope="col">Discount</th>
      <th scope="col">Total Amount</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr style="vertical-align: middle">
        <td><%= invoice.customer_name %></td>
        <td><%= invoice.customer_email %></td>
        <td><%= invoice.status %></td>
        <td><%= invoice.discount %></td>
        <td><%= invoice.total_amount %></td>
        <td>
          <div class="d-flex">
            <%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-primary' %>
            <%= button_to "Delete", invoice, method: :delete, class: 'btn btn-danger mx-2' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

