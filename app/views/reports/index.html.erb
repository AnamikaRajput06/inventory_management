<% content_for :title, "Sales Reports" %>

<div class="container">
  <h1>Sales Reports</h1>

  <%= form_tag reports_path, method: :get, class: 'mb-4' do %>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= label_tag :start_date %>
          <%= date_field_tag :start_date, @start_date, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= label_tag :end_date %>
          <%= date_field_tag :end_date, @end_date, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-4 d-flex align-items-end">
        <%= submit_tag 'Generate Report', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Total Sales</h3>
        </div>
        <div class="card-body">
          <h2 class="text-primary">â‚¹<%= number_with_precision(@total_sales, precision: 2) %></h2>
          <p class="text-muted">
            From <%= @start_date.strftime('%B %d, %Y') %> to <%= @end_date.strftime('%B %d, %Y') %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Top Selling Products</h3>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Quantity Sold</th>
                </tr>
              </thead>
              <tbody>
                <% @top_products.each do |product| %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.total_quantity %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
